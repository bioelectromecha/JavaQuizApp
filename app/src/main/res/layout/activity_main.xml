<?xml version="1.0" encoding="utf-8"?>

<!--the outer <layout> tag is for the android databinding library -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="roman.com.javaquizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <ImageView
                android:id="@+id/question_1_status_indicator"
                style="@style/AppTheme.QuestionStatusIndicator"
                />

            <ImageView
                android:id="@+id/question_2_status_indicator"
                style="@style/AppTheme.QuestionStatusIndicator"
                />

            <ImageView
                android:id="@+id/question_3_status_indicator"
                style="@style/AppTheme.QuestionStatusIndicator"
                />

            <ImageView
                android:id="@+id/question_4_status_indicator"
                style="@style/AppTheme.QuestionStatusIndicator"
                />

            <ImageView
                android:id="@+id/question_5_status_indicator"
                style="@style/AppTheme.QuestionStatusIndicator"
                />

            <ImageView
                android:id="@+id/question_6_status_indicator"
                style="@style/AppTheme.QuestionStatusIndicator"
                />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_1_title"
                style="@style/AppTheme.QuestionTitle"
                android:text="Question 1"
                />

        </LinearLayout>


    </ScrollView>

    </LinearLayout>

</layout>