<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.QuestionStatusIndicator" parent="AppTheme">
        <item name="android:tint">@color/textColorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/question_not_done</item>
        <item name="android:contentDescription">@string/question_not_done</item>
    </style>

    <style name="AppTheme.QuestionTitle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>


</resources>
